<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<catalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://docs.killbill.io/latest/catalog.xsd">
    <effectiveDate>2021-03-03T00:00:00+00:00</effectiveDate>
    <catalogName>WiflixCatalog</catalogName>
    <recurringBillingMode>IN_ADVANCE</recurringBillingMode>
    <currencies>
        <currency>KES</currency>
    </currencies>
    <products>
        <product name="Standard">
            <category>BASE</category>
        </product>
    </products>
    <rules>
        <changePolicy>
            <changePolicyCase>
                <policy>END_OF_TERM</policy>
            </changePolicyCase>
        </changePolicy>
        <cancelPolicy>
            <cancelPolicyCase>
                <policy>END_OF_TERM</policy>
            </cancelPolicyCase>
        </cancelPolicy>
    </rules>
    <plans>
        <plan name="wiflix-fixed-daily">
            <product>Standard</product>
            <initialPhases>
            </initialPhases>
            <finalPhase type="FIXEDTERM">
                <duration>
                    <unit>DAYS</unit>
                    <number>2</number>
                </duration>
                <recurring>
                    <!-- Billed monthly, for 12 months -->
                    <billingPeriod>DAILY</billingPeriod>
                    <recurringPrice>
                        <price>
                            <currency>KES</currency>
                            <value>29</value>
                        </price>
                    </recurringPrice>
                </recurring>
            </finalPhase>
        </plan>
    </plans>
    <priceLists>
        <defaultPriceList name="DEFAULT">
            <plans>
                <plan>wiflix-fixed-daily</plan>
            </plans>
        </defaultPriceList>
    </priceLists>
</catalog>